<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ui.usuarios.RegistrarseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/medium_image_margin"
                android:layout_height="@dimen/medium_image_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/asd"
                android:scaleType="centerCrop"
                android:src="@drawable/book_tree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@color/black"
                android:gravity="center"
                android:paddingHorizontal="@dimen/padding_button"
                android:paddingVertical="@dimen/padding_small"
                android:text="@string/register_user"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_image_margin"
                android:layout_marginVertical="@dimen/padding_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:labelFor="@id/register_name"
                        android:text="@string/name" />

                    <EditText
                        android:id="@+id/register_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:autofillHints="name"
                        android:digits="@string/textName"
                        android:inputType="text"
                        android:maxLength="100" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:gravity="center"
                        android:labelFor="@id/register_lastname"
                        android:text="@string/last_name" />

                    <EditText
                        android:id="@+id/register_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:autofillHints="name"
                        android:digits="@string/textName"
                        android:inputType="text" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:gravity="center"
                        android:labelFor="@id/register_fechanacimiento"
                        android:text="@string/born_date" />

                    <DatePicker
                        android:id="@+id/register_fechanacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:datePickerMode="spinner"
                        android:calendarViewShown="false"
                        android:layout_marginTop="@dimen/padding_button" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:gravity="center"
                        android:labelFor="@id/register_telefono"
                        android:text="@string/phone_number" />

                    <EditText
                        android:id="@+id/register_telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:autofillHints="phone"
                        android:digits="@string/numbers"
                        android:inputType="text" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:gravity="center"
                        android:labelFor="@id/register_email"
                        android:text="@string/email" />

                    <EditText
                        android:id="@+id/register_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:autofillHints="emailAddress"
                        android:digits="@string/textEmail"
                        android:inputType="textEmailAddress" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:gravity="center"
                        android:labelFor="@id/register_username"
                        android:text="@string/username" />

                    <EditText
                        android:id="@+id/register_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:autofillHints="emailAddress"
                        android:digits="@string/textName"
                        android:inputType="text" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:gravity="center"
                        android:labelFor="@id/register_userpass"
                        android:text="@string/userpass" />

                    <EditText
                        android:id="@+id/register_userpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        android:autofillHints="emailAddress"
                        android:inputType="textPassword" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/register_savebtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_button"
                        style="@style/ThemeOverlay.Material3.MaterialCalendar"
                        android:gravity="center"
                        android:text="@string/save" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>